@model IEnumerable<DATN_BUIVANCHIEN.Models.HDH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<style type="text/css">
    table, th, td {
        border: 1px solid #868585;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 10px;
    }

    table tr:nth-child(odd) {
        background-color: #eee;
    }

    table tr:nth-child(even) {
        background-color: white;
    }

    table tr:nth-child(1) {
        background-color: skyblue;
    }
</style>
<a href="@Url.Action("Index", "Admin")" style="font:30px">Về trang trủ</a>
<h2>Quản lý Hệ điều hành</h2>

<p>
    <button>@Html.ActionLink("Create New", "Create")</button> 
</p>
<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHDH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHDH)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaHDH }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaHDH }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaHDH })
            </td>
        </tr>
    }

</table>
