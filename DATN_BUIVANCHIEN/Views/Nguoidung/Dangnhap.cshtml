
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<style>
    #admin{font:24px;
        width:50px;
        height:20px;
        background-color:aqua;
    }
</style>
<h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
<a href="@Url.Action("Dangnhap","Admin")" id="admin">
    Đăng nhập Quản Trị Viên
</a>
<table align="center" style="font-size:13pt">
    <h2 style="text-align:center">ĐĂNG NHẬP</h2>
    @using(Html.BeginForm())
            {
@Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @ViewData["loi1"]</td>

        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>@Html.Password("Matkhau") @ViewData["loi2"]</td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" value="Đăng nhập" /></td>
        </tr>
            }
</table>
