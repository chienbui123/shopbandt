
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
<table align="center" style="font-size:13pt">
    <h2 style="text-align:center">ĐĂNG NHẬP ADM</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @ViewData["loitk"]</td>

        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>@Html.Password("Matkhau") @ViewData["loimk"]</td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" value="Đăng nhập" /></td>
        </tr>
    }
</table>

